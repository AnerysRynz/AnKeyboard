<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="[http://schemas.android.com/apk/res/android](http://schemas.android.com/apk/res/android)">
    <!-- State: Ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CFD8DC"/> <!-- Abu-abu kebiruan -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- State: Normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#ECEFF1"/> <!-- Shadow halus -->
        </shape>
    </item>
</selector>
